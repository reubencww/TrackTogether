<?xml version="1.0" encoding="utf-8"?>


    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/time_in_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/time_out_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/location_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/image_title_textView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#020202" />
    </TableRow>
    </TableLayout>
